<ul class="list-group">
    {{#each posts as |post|}}
    <li class="list-group-item flex-column d-flex justify-content-between align-items-center">
        <h5 class="mb-1"><a href="/post/{{post.id}}">{{post.title}}</a></h5>
        <p class="mb-1">{{post.post_content}}</p>
        <small>created at {{post.created_at}}</small>
    </li>
    {{/each}}
</ul>